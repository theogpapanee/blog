<div class="form-group mt-3">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control" rows="4"><%= article.description %></textarea>
</div>
<div class="form-group mt-3">
    <label for="markdown">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" rows="6"><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary mt-3">Save</button>
<a href="/" class="btn btn-secondary mt-3">Cancel</a>